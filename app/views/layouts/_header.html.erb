<header class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Tower", root_path, class: "brand" %>
      <nav>
        <ul class="nav">
          <% if signed_in? %>
            <% if @team %>
            <li><%= link_to "项目", team_projects_path(@team) %></li>
            <% end %>
            <li><%= link_to "动态", "#" %></li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to @current_user.name, @current_user %></li>
            <li><%= link_to "退出", signout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "登陆", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
