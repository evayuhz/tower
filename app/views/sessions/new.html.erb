<div class="row">
  <div class="signin_logo center">
    <%= link_to image_tag("logo-signin.png"), root_path %>
  </div>
  <div class="span6 offset3">
    <%= form_for(:session,  url: sessions_path , html: {class: "form-signin"} ) do |f| %>
      <%= f.text_field :email, autofocus: true, placeholder: "登录邮箱", class: "input-block-level" %>
      <%= f.password_field :password, placeholder: "密码",class: "input-block-level" %>

      <%= f.submit "登录", class: "btn btn-large btn-primary btn-block" %>
    <% end %>
  </div>
</div>
