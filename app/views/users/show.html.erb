<div class="page">
  <div class="member-info">
    <%= gravatar_for @user %>
    <div class="info">
      <h2><%= @user.name %></h2>
      <p>
        <%= mail_to @user.email, @user.email %>
      </p>
    </div>
  </div>
  <div class="user-teams">
    <% @teams.each do |team| %>
      <%= link_to team.name, team %>
      </br>
    <% end %>
  </div>
</div>
