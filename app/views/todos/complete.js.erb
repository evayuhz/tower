<% if @todo.completed? %>
  <% if request.original_url.include?("todos") %>
    // todos#show page
    $("#<%= dom_id @todo %>").addClass("completed")
  <% else %>
    // projects#show page
    $("#<%= dom_id @todo %>").prependTo('#todos-completed');
  <% end %>
<% else %>
  <% if request.original_url.include?("todos") %>
    $("#<%= dom_id @todo %>").removeClass("completed")
  <% else %>
    $("#<%= dom_id @todo %>").appendTo('#todos-uncompleted');
  <% end %>
<% end %>
