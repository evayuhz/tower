<%= form_for([@project, @todo], html: { id: "todo_form" }, remote: true) do |f| %>
  <div class="form-body">
    <%= f.text_area :content, class: "todo-content no-border", placeholder: "新的任务" %>
  </div>
  <div class="buttons">
    <%= f.submit "确定", class: "btn, btn-primary" %>
    <%= link_to "取消", "#", class: 'btn-cancel-todo' %>
  </div>
<% end %>
